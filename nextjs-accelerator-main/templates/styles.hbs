body {
  font-family: 'SF Pro Text', 'SF Pro Icons', 'Helvetica Neue', 'Helvetica',
    'Arial', sans-serif;
  padding: 20px 20px 60px;
  max-width: 800px;
  color: #143d59;
  margin: 0 auto;
}

.appbar {
    display: flex;
    justify-content: space-between;
}

nav {
    background-color: #BC271A;
    padding: 10px;
    color: #ffff;
}

nav a {
  color: #ffff;
}

.container {
    margin-top: 1.5rem;
    display: flex;
    height: 50vh;
    justify-content: center;
    align-items: center;
    border: dashed;
}
.container button {
  background-color: #BC271A;
  color: white;
   padding: 15px;
  border-radius: 10px;
  cursor: pointer
}

.container a {
  color: #BC271A;
}

.microapp-container {
    margin-top: 1.5rem;
    height: 50vh;
    border: dashed;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    row-gap: 25px;
}

.microapp-container strong {
    font-size: 40px;
    text-transform: capitalize;
}

.microapp-container button {
    background-color: #BC271A;
    color: white;
    padding: 15px;
    border-radius: 10px;
    margin-left: 2em;
}
